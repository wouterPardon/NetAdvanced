<Window x:Class="ButtonDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Button Name="fancyButton" FontSize="28" Foreground="Aqua">
        <Button.Content>
            <StackPanel>
                <TextBlock>This is a button</TextBlock>
                <TextBlock>This is a button</TextBlock>
            </StackPanel>
        </Button.Content>
        <Button.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.3,1">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="Red" Offset="0"></GradientStop>
                    <GradientStop Color="Green" Offset="0.5"></GradientStop>
                    <GradientStop Color="Blue" Offset="1"></GradientStop>
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </Button.Background>
    </Button>
</Window>
